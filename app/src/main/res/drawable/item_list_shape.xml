<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">

            <solid android:color="@color/whiteish"/>

            <corners android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp"
                android:bottomRightRadius="12dp"
                android:topRightRadius="12dp"/>

        </shape>
    </item>

    <item android:bottom="2.3dp"
        android:left="2.3dp"
        android:top="2.3dp"
        android:right="2.3dp">
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <solid android:color="@color/blackish" />
            <corners android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp"
                android:bottomRightRadius="12dp"
                android:topRightRadius="12dp"/>
        </shape>
    </item>

</layer-list>